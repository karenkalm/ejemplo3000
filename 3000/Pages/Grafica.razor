@page "/graficaclientes"

<div class="grafica-container">
    <h2 class="titulo">📊 Ventas por Mes</h2>

    <div class="chart-box">
        <div class="bar">
            <span class="label">Enero</span>
            <div class="bar-fill" style="height:50px;">50</div>
        </div>
        <div class="bar">
            <span class="label">Febrero</span>
            <div class="bar-fill" style="height:70px;">70</div>
        </div>
        <div class="bar">
            <span class="label">Marzo</span>
            <div class="bar-fill" style="height:40px;">40</div>
        </div>
        <div class="bar">
            <span class="label">Abril</span>
            <div class="bar-fill" style="height:90px;">90</div>
        </div>
        <div class="bar">
            <span class="label">Mayo</span>
            <div class="bar-fill" style="height:120px;">120</div>
        </div>
    </div>
</div>
